extends ../layout

block content
  .container

    include ../partials/flash

    .page-header
      h3 Sign in
      p New to BargainBetter?&nbsp;
        a(href='/signup') Create an account
    form.form-horizontal(method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        .col-sm-offset-4.col-sm-5
            a.btn.btn-block.btn-linkedin.btn-social(href='/auth/linkedin')
              i.fa.fa-linkedin
              | Sign in with LinkedIn
      .form-group
        label.col-sm-4.control-label(for='email') Email
        .col-sm-4
          input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
      .form-group
        label.col-sm-4.control-label(for='password') Password
        .col-sm-4
          input.form-control(type='password', name='password', id='password', placeholder='Password', required)
      .form-group
        .col-sm-offset-4.col-sm-4
          button.col-sm-3.btn.btn-primary(type='submit')
            i.fa.fa-user
            | Login
          a.btn.btn-link(href='/forgot') Forgot your password?